<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="150dp"
android:background="@drawable/border"
android:layout_marginVertical="5dp"
android:layout_marginHorizontal="18dp">

<!-- Customize the content of each item here -->
<!-- Example: TextView to display the item's text -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nomeSpesa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:text="Spesa"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/dataSpesa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="25/05/2023"/>
        <TextView
            android:id="@+id/valoreSpesa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="50â‚¬"/>
        <TextView
            android:id="@+id/pagatoDa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pagato da Giovanni"/>
        <TextView
            android:id="@+id/divisoTra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Diviso tra tutti"/>

    </LinearLayout>
</FrameLayout>