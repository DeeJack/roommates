<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Customize the content of each item here -->
    <!-- Example: TextView to display the item's text -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/user"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titoloSituazione"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:text="Marco"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/descrizioneSituazione"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Devi 5â‚¬ a Marco"
                android:textColor="@color/white"/>

        </LinearLayout>

        <Button
            android:id="@+id/pagaSituazione"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="paga"
            android:layout_gravity="center"/>


    </LinearLayout>




</FrameLayout>
