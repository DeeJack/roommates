<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/opzioneText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:padding="8dp"
            android:text="@string/error_placeholder" />

        <ImageView
            android:id="@+id/buttonDeleteOption"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:src="@drawable/remove_foreground"
            app:tint="@color/primaryTextColor" />

        <!--<ImageView
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:layout_weight="1"
            app:tint="@android:color/primary_text_dark"
            app:srcCompat="@drawable/remove_foreground" />-->

    </LinearLayout>

</FrameLayout>