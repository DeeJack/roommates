<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Roommates" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundColor">@color/background_dark</item>
        <item name="android:background">@color/background_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Appbar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="iconTint">@color/white</item>


        <item name="android:windowTitleBackgroundStyle">@android:color/white</item>
        <item name="android:textColorPrimary">@color/white</item>

        <!-- Splash screen options -->
        <item name="android:windowSplashScreenBackground" tools:ignore="NewApi">@color/background_dark</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:ignore="NewApi">@drawable/home</item>
        <item name="android:windowSplashScreenBehavior" tools:ignore="NewApi">icon_preferred</item>
        <item name="android:windowSplashScreenAnimationDuration" tools:ignore="NewApi">1000</item>


    </style>

    <style name="Theme.Roommates.Asd">
        <item name="colorPrimary">#7C98FF</item>
        <item name="itemBackground">@android:color/transparent</item>


        <!--
        <item name="colorControlHighlight">@color/white</item>
        <item name="colorControlActivated">@color/white</item>

        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        -->
    </style>

    <style name="Theme.Roommates.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>