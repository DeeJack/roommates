<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Roommates" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundColor">@color/background_dark</item>
        <item name="android:background">@color/background_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Appbar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="iconTint">@color/white</item>


        <item name="android:windowTitleBackgroundStyle">@android:color/white</item>
        <item name="android:textColorPrimary">@color/white</item>

        <!-- Splash screen options -->
        <item name="windowSplashScreenBackground">@color/background_dark</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/home</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>


        <item name="android:checkboxStyle">@style/Theme.Roommates.Checkbox</item>
        <item name="android:radioButtonStyle">@style/Theme.Roommates.Radio</item>

    </style>

    <style name="Theme.Roommates.Asd">
        <item name="colorPrimary">#7C98FF</item>
        <item name="itemBackground">@android:color/transparent</item>

    </style>

    <style name="Theme.Roommates.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Roommates.Checkbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@color/white</item>
        <item name="buttonTint">@color/white</item>
        <item name="android:buttonTint">@color/white</item>
    </style>

    <style name="Theme.Roommates.Radio" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@color/white</item>
        <item name="buttonTint">@color/white</item>
        <item name="android:buttonTint">@color/white</item>
    </style>

    <style name="Theme.Roommates.Calendar">
        <item name="android:textColor">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="MyDatePickerStyle"  >
        <item name="android:calendarTextColor">@color/white</item>
        <item name="android:dayOfWeekBackground">@color/white</item>
    </style>


    <style name="Theme.Roommates.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="backgroundColor">@color/purple_500</item>
        <item name="android:colorBackground">@color/purple_500</item>
        <item name="android:background">@color/purple_500</item>
    </style>

    <style name="Theme.Roommates.AlertDialg" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:colorAccent">#1b5e20</item>
        <item name="backgroundColor">@color/background_dark</item>
        <item name="android:background">@color/background_dark</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>
</resources>